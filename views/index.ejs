<div class="form_box">
    <h1>Welcome to Blog Create!</h1>
    <form action="/submit" method="POST" enctype="multipart/form-data">
        <input type="text" name ="title" placeholder="Enter Title text" required/>
        <textarea name="content" placeholder="Blog Content" required></textarea>
        <input type="file" name= "image" accept="image/*" required>
        <button type="submit">Generate Blog</button> 
    </form>
</div>
<h2>Blog Posts...</h2>
<div id="blogsContainer">
<% if (blogs.length === 0) { %>
    <p>No blogs available yet. Create the first one!</p>
<% } else { %>
    <% blogs.forEach(blog => { %>
    <div class="blog-entry">
        <h3><%= blog.title %></h3>
        <img src="<%= blog.imagePath %>" alt="Blog Image" width="200" />
        <p><%= blog.content %></p>
    </div>
    <% }) %>
<% } %>
</div>